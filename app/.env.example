# Test Environment Configuration
# Copy this file to .env.local for local development

# Database connection
# Get this from: Neon dashboard → Branches → development → Connection String
# Copy the full PostgreSQL connection string including credentials
DATABASE_URL='postgresql://user:password@host.region.aws.neon.tech/dbname?sslmode=require'

# NextAuth Configuration
# NEXTAUTH_URL: Your application's base URL
# For local development: http://localhost:3000
# For production: https://sorte-grande.vercel.app
NEXTAUTH_URL=http://localhost:3000

# NEXTAUTH_SECRET: Secret key for JWT encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# Resend Email Provider
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# Cron Job Authentication
# Generate with: openssl rand -base64 32
# Used to secure cron endpoints (Production only)
CRON_SECRET=your-cron-secret-here-generate-with-openssl-rand-base64-32

# Test Environment
TEST_ENV=development

# Application URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Test User Credentials (for E2E tests)
TEST_USER_EMAIL=test@example.com

# Feature Flags (for testing specific features)
ENABLE_LOTTERY_SUGGESTIONS=true

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Resend Email Service
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev
ENABLE_USER_PROFILES=true
